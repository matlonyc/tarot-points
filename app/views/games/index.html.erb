<div id="top" class="header">
  <div class="vert-text">
    <h1>Tarot Games</h1>
    <h3>Welcome to our Tarot game score tracker</h3>
    <%= link_to 'New game', new_game_path, class:"btn btn-default btn-lg" %>
  </div>
</div>
<hr>
<div id="gameslist" class="services">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 text-center">
         <h3>Previous games</h3>
         <hr>
      </div>
    </div>

    <div class="row">
      <% @games.each do |game| %>
        <div class="col-md-3 text-center">
          <div class="game-item">
            <i class="service-icon"><%= game.date %></i>
            <h4><%= game.location %></h4>
            <%= link_to 'Show', game_path(game), class:"btn btn-default btn-sm" %>
            <%= link_to 'Delete', game_path(game),
                method: :delete, data: { confirm: 'Are you sure?' },
                class:"btn btn-default btn-sm" %>
            <% game.players.each do |player| %>
              <p><%= player.name %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>

